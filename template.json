{
  "dnsname": "{{ clusterid }}",
  "nodes": {
    "postgresql_node0": {
      "docker_image": "docker-registry.cesga.es:5000/postgres:9.3",
      "docker_opts": "-e POSTGRES_PASSWORD={{ opts['password'] }} ",
      "cpu": {{ opts['cpu'] }},
      "mem": {{ opts['mem'] }},
      "disks": {
        "disk0": {
          "destination":  "/data"
        }
      },
      "networks": {
        "eth0": {"type": "dynamic", "networkname": "storage"},
        "eth1": {"type": "dynamic", "networkname": "admin" }
      }
    }
  },
  "services": {
      "postgresql": { "nodes": ["postgresql_node0"] }
  }
}
